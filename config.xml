<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "de.gamemodeon.app"
	version		= "0.2">
	<preference name="phonegap-version" value="3.6.3" />

	<name>GameModeON</name>
	<description>
		Die echte, originale, hoch gelobte GMO App! Besucht uns auch auf www.gamemodeon.de
	</description>
	<author href="http://gamemodeon.de/forum/User/1/" email="lub@gamemodeon.de">
		lub
	</author>
	
	<icon src="images/icon.png" />
	
	<preference name="permissions" value="none" />
	<feature name="http://api.phonegap.com/1.0/network" />
	
	<gap:plugin name="uk.co.ibcomputing.phonegapbuild.plugins.receivesendintents">
		<param name="LAUNCHMODE" value="singleTop" />
	</gap:plugin>
	<gap:plugin name="net.tunts.webintent" />
	<gap:plugin name="com.phonegap.plugins.pushplugin" />
	<gap:plugin name="org.apache.cordova.camera" />
	
	<access origin="http://gamemodeon.de" />

	<gap:platform name="android" />
</widget>
