<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "de.gamemodeon.app"
	version		= "0.5.1">
	<preference name="phonegap-version" value="3.6.3" />

	<name>GameModeON</name>
	<description>
		Die echte, originale, hoch gelobte GMO App! Besucht uns auch auf www.gamemodeon.de
	</description>
	<author href="http://gamemodeon.de/forum/User/1/" email="lub@gamemodeon.de">
		lub
	</author>
	
	<icon src="images/icon.png" />
	
	<preference name="permissions" value="none" />
	<feature name="http://api.phonegap.com/1.0/network" />
	
	<gap:plugin name="it.mobimentum.phonegapspinnerplugin" />
	<gap:plugin name="org.apache.cordova.inappbrowser" />
	<gap:plugin name="org.apache.cordova.file-transfer" />
	<gap:plugin name="org.apache.cordova.camera" />
	<gap:plugin name="org.apache.cordova.dialogs" />
	<gap:plugin name="nl.x-services.plugins.toast" />
	<gap:plugin name="com.pushwoosh.plugins.pushwoosh" source="plugins.cordova.io" />
	
	<access origin="https://gamemodeon.de" />
	<access origin="*.pushwoosh.com" />
	
	<gap:platform name="android" />
	<!--<gap:platform name="winphone" />-->
</widget>
